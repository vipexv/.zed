{
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"use_smartcase_search": true,
	"vim_mode": true,
	"use_autoclose": true,
	"active_pane_modifiers": {
		"border_size": 2,
		"inactive_opacity": 0.5
	},
	"ui_font_family": "Input Mono",
	"ui_font_size": 18,
	"ui_font_weight": 500,
	"buffer_font_family": "Input Mono",
	"buffer_font_size": 25,
	"buffer_font_weight": 500,
	"buffer_line_height": "standard",
	"hard_tabs": true,
	"hover_popover_enabled": false,
	"extend_comment_on_newline": false,
	"edit_predictions": {
		"enabled_in_text_threads": false
	},
	"gutter": {
		"line_numbers": true,
		// "code_actions": false,
		// "runnables": false,
		"folds": false
	},
	"file_finder": {
		"modal_max_width": "medium"
	},
	"features": {
		"edit_prediction_provider": "none"
	},
	"agent": {
		"enabled": false,
		"version": "1"
	},
	"inlay_hints": {
		"enabled": true,
		"show_parameter_hints": true,
		"show_type_hints": false
	},
	"vim": {
		"toggle_relative_line_numbers": true,
		"highlight_on_yank_duration": 200,
		"use_system_clipboard": "always"
	},
	"git": {
		"git_gutter": "hide"
	},
	"cursor_shape": "block",
	"preferred_line_length": 200,
	"diagnostics": {
		"include_warnings": true,
		"inline": {
			"enabled": true
		}
	},
	"tab_size": 4,
	"tab_bar": {
		"show": false
	},
	"terminal": {
		"shell": {
			"program": "C:\\Program Files\\Git\\bin\\bash.exe"
		},
		"toolbar": {
			"breadcrumbs": false
		},
		"line_height": "standard",
		"dock": "left",
		"scrollbar": {
			"show": "never"
		},
		"font_family": "Input Mono",
		"font_weight": 500,
		"font_size": 20
	},
	"project_panel": {
		"indent_size": 15,
		"entry_spacing": "standard",
		"default_width": 200,
		"auto_fold_dirs": false,
		"dock": "right",
		"scrollbar": {
			"show": "never"
		},
		"indent_guides": {
			"show": "never"
		}
	},
	"scrollbar": {
		"show": "never"
	},
	"lsp": {
		"rust-analyzer": {
			"initialization_options": {
				"diagnostics": {
					"experimental": {
						"enable": true
					}
				},
				"checkOnSave": false,
				"cargo": {
					"allTargets": false
				},
				"check": {
					"workspace": false
				}
			}
		}
	},
	"soft_wrap": "none",
	"languages": {
		"Lua": {
			"soft_wrap": "none",
			"preferred_line_length": 200
		}
	},
	"theme": {
		"mode": "system",
		"light": "Rosé Pine Dawn",
		"dark": "Rosé Pine"
	}
}
