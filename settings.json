// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
    // "selections_menu": false
  },
  "vim_mode": true,
  "ui_font_size": 20,
  "ui_font_family": "Iosevka",
  "hover_popover_enabled": false,
  "edit_predictions": {
    "enabled_in_assistant": false
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "assistant": {
    "enabled": false,
    "version": "1"
  },
  "inlay_hints": {
    "enabled": false,
    "show_parameter_hints": true,
    "show_type_hints": true
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always"
  },
  "git": {
    "git_gutter": "hide"
  },
  "cursor_shape": "block",
  "buffer_line_height": "standard",
  "preferred_line_length": 200,
  "buffer_font_family": "Iosevka",
  "buffer_font_size": 20,
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "tab_bar": {
    "show": false
  },
  "experimental.theme_overrides": {
    "editor.background": "#000000",
    "background": "#000000",
    "status_bar.background": "#000000",
    "editor.gutter.background": "#000000",
    "tab_bar.background": "#000000",
    "tab.active_background": "#2a2a2a",
    "tab.inactive_background": "#000000",
    "title_bar.background": "#000000",
    "title_bar.inactive_background": "#000000",
    "terminal.background": "#000000",
    "editor.active_line.background": "#000000",
    "panel.background": "#000000",
    "toolbar.background": "#000000"
  },
  "terminal": {
    "shell": {
      "program": "C:\\Program Files\\Git\\bin\\bash.exe"
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "line_height": "standard",
    "font_size": 16,
    "dock": "right"
  },

  "project_panel": {
    "indent_size": 15,
    "entry_spacing": "standard",
    "default_width": 200,
    "auto_fold_dirs": false,
    "dock": "right",
    "scrollbar": {
      "show": "never"
    },
    "indent_guides": {
      "show": "never"
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "soft_wrap": "bounded",
  "languages": {
    "Lua": {
      "soft_wrap": "none",
      "preferred_line_length": 200
    }
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Tokyo Night"
  }
}
