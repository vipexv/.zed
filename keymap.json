[
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": ["vim::PushAddSurrounds", {}]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": { "ctrl-s": ["workspace::SendKeystrokes", "escape : w enter"] }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-`": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space p v": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space p v": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Workspace && vim_mode == normal || vim_mode == normal || ProjectPanel",
    "bindings": {
      "space p f": "file_finder::Toggle"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "c a": "project_panel::CollapseAllEntries"
    }
  }
]
